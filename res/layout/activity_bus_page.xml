<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pages_header_title_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/info_header_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/pageTextTitleText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="דרכי הגעה"
            android:textColor="@color/white"
            android:textSize="@dimen/pages_header_tilte_size" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/menuLayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/titleLayout"
        android:background="@color/darkblue" >

        <TextView
            android:id="@+id/navigationStaticText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textSize="@dimen/head_link_static_text_size" />

        <LinearLayout
            android:id="@+id/navigationLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:divider="@drawable/divider"
            android:dividerPadding="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:showDividers="middle" >
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollBodyContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/footerBanner"
        android:layout_below="@id/menuLayout"
        android:background="@drawable/info_body_bg"
        android:padding="7dp"
        android:paddingTop="25dp" >

        <LinearLayout
            android:id="@+id/pageBodyContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/TrempRulesHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="@dimen/pages_header_tilte_size"
                android:textColor="@color/blue"
                android:text = "כללי נסיעה בטרמפים" />
            
            <TextView
                android:id="@+id/TrempRules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/pages_body_headers_size" />
            "
            <TableLayout
                android:id="@+id/tab"
                android:layout_width="600dp"
                android:layout_height="wrap_content" >
            </TableLayout>

            <TableLayout
                android:id="@+id/tab2"
                android:layout_width="600dp"
                android:layout_height="wrap_content" >
            </TableLayout>

            <TableLayout
                android:id="@+id/tab3"
                android:layout_width="600dp"
                android:layout_height="wrap_content" >
            </TableLayout>

            <TableLayout
                android:id="@+id/tab4"
                android:layout_width="600dp"
                android:layout_height="wrap_content" >
            </TableLayout>

            <TableLayout
                android:id="@+id/tab5"
                android:layout_width="600dp"
                android:layout_height="wrap_content" >
            </TableLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/footerBanner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pages_footer_title_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:fadingEdge="vertical"
            android:fadingEdgeLength="5dp"
            android:src="@drawable/bus_low_banner" />
    </RelativeLayout>

</RelativeLayout>