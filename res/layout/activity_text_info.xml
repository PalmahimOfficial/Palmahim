<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/app_width"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pages_header_title_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/info_header_bg_bitmap"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/pageTextTitleText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/pages_header_tilte_size" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollBodyContent"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/titleLayout"
        android:layout_centerHorizontal="true"
        android:background="@drawable/info_body_bg_bitmap"
        android:padding="7dp" >

        <LinearLayout
            android:id="@+id/pageBodyContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>
    
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/pages_footer_title_height"
            android:layout_below="@id/scrollBodyContent"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/keva_footer_banner"
            android:contentDescription="@null" />

</RelativeLayout>